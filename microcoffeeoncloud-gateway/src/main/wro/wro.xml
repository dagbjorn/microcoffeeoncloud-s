<groups xmlns="http://www.isdc.ro/wro">

	<!-- NOTE! Spring Boot applications need to use @@ instead of ${} for Maven filtering to work. -->

    <group name="angular-bootstrap">
        <css>webjar:bootstrap/@bootstrap.version@/css/bootstrap.css</css>

        <js>webjar:angularjs/@angularjs.version@/angular.js</js>
        <js>webjar:angularjs/@angularjs.version@/angular-resource.js</js>
        <js>webjar:angular-ui-bootstrap/@angular-ui-bootstrap.version@/dist/ui-bootstrap-tpls.js</js>
    </group>

    <group name="angular-bootstrap-min">
        <css>webjar:bootstrap/@bootstrap.version@/css/bootstrap.min.css</css>

        <js>webjar:angularjs/@angularjs.version@/angular.min.js</js>
        <js>webjar:angularjs/@angularjs.version@/angular-resource.min.js</js>
        <js>webjar:angular-ui-bootstrap/@angular-ui-bootstrap.version@/dist/ui-bootstrap-tpls.js</js>
    </group>
</groups>
